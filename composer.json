{
    "name": "artox-lab/clarc-bundle",
    "description": "Build Symfony project within Clean Architecture",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Artur Turchin",
            "email": "a.turchin@artox.com"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "ext-json": "*",
        "doctrine/annotations": "^1.12",
        "league/fractal": "^0.19",
        "liip/monitor-bundle": "^2.16",
        "pagerfanta/pagerfanta": "^3.0",
        "symfony-bundles/json-request-bundle": "^4.0",
        "symfony/framework-bundle": "^6.0",
        "symfony/messenger": "^6.0",
        "symfony/translation": "^6.0",
        "symfony/validator": "^6.0"
    },
    "require-dev": {
        "haydenpierce/class-finder": "^0.4.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "symfony/maker-bundle": "^1.29"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "ArtoxLab\\Bundle\\ClarcBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "Tests/"
        }
    }
}
